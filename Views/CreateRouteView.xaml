<Window x:Class="Exercise.Views.CreateRouteView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thông số tuyến" Height="350" Width="300"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="15">
        <StackPanel>
            <TextBlock Text="Kích thước Rộng (mm):" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Width}" Height="25" Margin="0,0,0,10"/>

            <TextBlock Text="Kích thước Cao (mm):" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Height}" Height="25" Margin="0,0,0,10"/>

            <TextBlock Text="Cao độ (mm):" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Elevation}" Height="25" Margin="0,0,0,20"/>

            <Button Content="Vẽ tuyến" Height="30" 
                    Command="{Binding DrawCommand}" 
                    FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>