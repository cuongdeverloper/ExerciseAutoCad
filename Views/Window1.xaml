<Window x:Class="Exercise.Views.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exercise.ViewModels"
        mc:Ignorable="d"
        Title="Cấu hình hiển thị Text (Setup)" Height="500" Width="450"
        Background="#F5F5F5" WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <local:TextSetupViewModel/>
    </Window.DataContext>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Header="A. ĐỊNH DẠNG TEXT" Margin="0,5">
            <StackPanel Margin="10">
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Cỡ chữ (Height):"/>
                    <TextBox Grid.Column="1" Text="{Binding Settings.TextHeight, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>

                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Màu sắc:"/>
                    <ComboBox Grid.Column="1" SelectedIndex="{Binding Settings.ColorIndex}">
                        <ComboBoxItem Content="Red (1)"/>
                        <ComboBoxItem Content="Yellow (2)"/>
                        <ComboBoxItem Content="Green (3)"/>
                        <ComboBoxItem Content="Cyan (4)"/>
                        <ComboBoxItem Content="Blue (5)"/>
                        <ComboBoxItem Content="Magenta (6)"/>
                        <ComboBoxItem Content="White (7)"/>
                    </ComboBox>
                </Grid>
            </StackPanel>
        </GroupBox>

        <GroupBox Grid.Row="1" Header="B. NỘI DUNG HIỂN THỊ" Margin="0,5">
            <StackPanel Margin="10">
                <CheckBox Content="Luôn hiển thị Size ống" IsChecked="{Binding Settings.ShowPipeSize}" Margin="0,5"/>
                <CheckBox Content="Hiển thị trường Custom" IsChecked="{Binding Settings.ShowCustomField}" Margin="0,5"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Grid.Row="2" Header="C. XEM TRƯỚC (PREVIEW)" Margin="0,5">
            <Border Background="#1E1E1E" CornerRadius="3" VerticalAlignment="Stretch">
                <TextBlock Text="{Binding Settings.PreviewText}" 
                           Foreground="Cyan" 
                           FontSize="18" 
                           FontFamily="Consolas"
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
            </Border>
        </GroupBox>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Mặc định" Width="80" Margin="5,0"/>
            <Button Content="Lưu cấu hình" Command="{Binding SaveCommand}" 
                    Background="#007ACC" Foreground="White" Width="100" Margin="5,0"/>
            <Button Content="Đóng" Width="80" Margin="5,0"/>
        </StackPanel>
    </Grid>
</Window>