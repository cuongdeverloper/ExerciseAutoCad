<Window x:Class="Exercise.Views.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:Exercise.ViewModels"
        Title="Cấu hình hiển thị Text (Setup)" Height="450" Width="400" WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <viewModels:TextSetupViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <StackPanel>
            <GroupBox Header="🅰 ĐỊNH DẠNG TEXT" Margin="0,0,0,10" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="Font chữ:"/>
                    <ComboBox Grid.Column="1" ItemsSource="{Binding Fonts}" SelectedItem="{Binding SelectedFont}" Margin="0,2"/>

                    <Label Grid.Row="1" Content="Cỡ chữ (Text Height):"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding TextHeight, UpdateSourceTrigger=PropertyChanged}" Margin="0,2"/>

                    <Label Grid.Row="2" Content="Màu sắc Layer:"/>
                    <Border Grid.Row="2" Grid.Column="1" Background="Cyan" Height="25" BorderBrush="Gray" BorderThickness="1" Margin="0,2"/>
                </Grid>
            </GroupBox>

            <GroupBox Header="📝 NỘI DUNG HIỂN THỊ" Margin="0,0,0,10" Padding="10">
                <StackPanel>
                    <CheckBox Content="Luôn hiển thị Size ống" IsChecked="{Binding AlwaysShowSize}" Margin="0,5"/>
                    <CheckBox Content="Hiển thị Trường Custom" IsChecked="{Binding ShowCustomField}" Margin="0,5"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="🔍 XEM TRƯỚC (PREVIEW)" Background="#1A1A1A" Height="80">
                <TextBlock Text="1-11, 1n, 1e-2.5 / d20" Foreground="Cyan" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14"/>
            </GroupBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button Content="Mặc định" Width="80" Margin="5,0"/>
                <Button Content="Lưu cấu hình" Command="{Binding SaveCommand}" Background="#0078D7" Foreground="White" Width="100" Margin="5,0"/>
                <Button Content="Đóng" Click="Close_Click" Width="80" Margin="5,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>