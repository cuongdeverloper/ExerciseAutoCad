<Window x:Class="Exercise.Views.CreateAttributeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tạo thuộc tính" Height="550" Width="600"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Thông tin lộ" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Tên lộ" VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <ComboBox Grid.Column="1" 
          ItemsSource="{Binding AvailableRoutes}" 
          SelectedItem="{Binding SelectedRoute}" 
          DisplayMemberPath="RouteName" 
          Height="30"/>
                </Grid>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Margin="0,0,0,10">
                    <TextBlock Text="Thông tin thuộc tính" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                    <Button Content="Tạo mới" Command="{Binding AddAttributeCommand}" 
                            HorizontalAlignment="Right" Background="#E8F5E9" Foreground="#2E7D32" 
                            BorderBrush="#2E7D32" Padding="15,5"/>
                </Grid>

                <DataGrid Grid.Row="1" ItemsSource="{Binding Attributes}" AutoGenerateColumns="False" 
                          CanUserAddRows="False" GridLinesVisibility="Horizontal" RowHeight="30">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Ký hiệu *" Binding="{Binding Symbol}" Width="*"/>
                        <DataGridTextColumn Header="Số lượng *" Binding="{Binding Quantity}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <Border Grid.Row="2" BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Chọn đối tượng" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <RadioButton Content="Theo đối tượng" IsChecked="{Binding IsByEntity}" Margin="0,0,20,0"/>
                    <RadioButton Content="Theo layer" IsChecked="{Binding IsByLayer}"/>
                </StackPanel>
                <Button Content="Chọn đối tượng ..." Command="{Binding SelectEntityCommand}" 
                        HorizontalAlignment="Left" Padding="15,8" Background="#EEE"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Gán" Command="{Binding AssignCommand}" Width="100" Height="35" 
                    Background="#1976D2" Foreground="White" FontWeight="Bold" Margin="0,0,10,0"/>
            <Button Content="Đóng" IsCancel="True" Width="100" Height="35" 
                    Background="#D32F2F" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>