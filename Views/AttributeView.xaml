<UserControl x:Class="Exercise.Views.AttributeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Exercise.ViewModels"                                                                                                                                                                                                    
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300" Background="WhiteSmoke">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="THUỘC TÍNH BLOCK" FontSize="16" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding AttributeList}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#DDDDDD" BorderThickness="0,0,0,1" Margin="0,5">
                            <StackPanel Margin="0,0,0,5">
                                <TextBlock Text="{Binding Tag}" FontWeight="SemiBold" Foreground="#555"/>
                                <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" 
                                         Padding="5" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Button Grid.Row="2" Content="CẬP NHẬT DỮ LIỆU" 
                Command="{Binding SaveCommand}"
                Height="40" Margin="0,15,0,0" 
                Background="#007ACC" Foreground="White" FontWeight="Bold"/>
    </Grid>
</UserControl>